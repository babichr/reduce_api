extends ./layouts/main.pug

block content
    h2 Registration
    br
    form(action="/register" method="POST")
        .form-group
            label Email
            input.form-control(name="email")
        .form-group
            label Username
            input.form-control(name="username")
        .form-group
            label Password
            input.form-control(type="password" name="password")
        .form-group
            label Confirm password
            input.form-control(type="password" name="confirmPassword")
        button(type="submit").btn.btn-primary Register
